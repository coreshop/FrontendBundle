<header id="header-area">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <div class="header-links">

                        <ul class="nav navbar-nav pull-left">
                            <li>
                                <a href="{{ path('coreshop_index') }}">
                                    <i class="fa fa-home hidden-lg hidden-md" title="{{ 'home'|trans }}"></i>
                                    <span class="hidden-sm hidden-xs">
                                        {{ 'home'|trans }}
                                    </span>
                                </a>
                            </li>
                            {{ render(controller('coreshop.frontend.controller.customer:headerAction')) }}
                        </ul>
                    </div>
                </div>

                <div class="col-sm-6 col-xs-12">

                    <div class="pull-right">

                        <div class="btn-group">
                            <!-- TOOD -->
                            <a class="btn btn-link" href="#">
                                {{ 'compare'|trans }}
                            </a>
                        </div>

                        <div class="btn-group">
                            <!-- TOOD -->
                            <a class="btn btn-link">
                                {{ 'wishlist'|trans }}
                            </a>
                        </div>

                        {{ render(controller('coreshop.frontend.controller.currency:widgetAction')) }}
                        {{ render(controller('coreshop.frontend.controller.language:widgetAction')) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-header">
        <div class="container">
            <div class="row">

                {{ render(controller('coreshop.frontend.controller.search:widgetAction')) }}

                <div class="col-md-6">
                    <div id="logo">
                        <a href="{{ path('coreshop_index') }}">
                            <img src="/static/coreshop/images/logo.png" title="CoreShop" alt="CoreShop" class="img-responsive" />
                            Core<span class="black">Shop</span>
                        </a>
                    </div>
                </div>

                <div class="col-md-3">
                    {{ render(controller('coreshop.frontend.controller.cart:widgetAction')) }}
                </div>
            </div>
        </div>
    </div>

    {{ render(controller('coreshop.frontend.controller.category:menuAction')) }}
</header>