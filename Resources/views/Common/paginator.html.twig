{% set pages = paginator.getPages() %}

{% if pages.pageCount > 1 %}
    <div class="row">
        <div class="col-sm-6 pagination-block">
            <ul class="pagination">
                {% if pages.previous is defined %}
                    {% if pages.previous %}
                        <li><a href="{{ pimcore_url({ page: pages.first }) }}">«</a></li>
                    {% endif %}
                {% endif %}

                {% for page in pages.pagesInRange %}
                    <li class="{% if page == pages.current  %} active {% endif %}"><a href="{{ pimcore_url({ page: page }) }}">{{ page }}</a></li>
                {% endfor %}

                {% if pages.next is defined %}
                    {% if pages.next %}
                        <li><a href="{{ pimcore_url({ page: pages.last }) }}">«</a></li>
                    {% endif %}
                {% endif %}
            </ul>
        </div>
    </div>
{% endif %}
