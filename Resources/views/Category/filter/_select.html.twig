{% if values|length > 0 %}
<div class="list-group">
    {% if label %}
        <div class="list-group-item" {{ coreshop_test_html_attribute('category-filter-label') }}>
            {{ label|trans }}
        </div>
    {% endif %}

    <div class="list-group-item">
        <div class="filter-group filter-group-checkbox">
            {% for value in values %}
                <label class="radio">
                    <input name="{{ fieldName }}" type="radio" value="{{ value['value'] }}" {% if currentValue == value['value'] %} checked="checked" {% endif %} {{ coreshop_test_html_attribute('category-filter-select',value['value']) }}>
                    {{ value['value']|trans }} {% if quantityUnit %} {{ quantityUnit.abbreviation }} {% endif %}
                </label>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}
