{% import '@CoreShopFrontend/Common/Macro/currency.html.twig' as currency %}

{# first sort by unit, if given #}
{% set sortedUnitRanges = [] %}
{% for range in rule.getRanges() %}
    {% set unit_identifier = range.hasUnitDefinition ? range.unitDefinition.unit.name : 'default' %}
    {% set unit_data = range.hasUnitDefinition ? range.unitDefinition.unit : null %}
    {% if sortedUnitRanges[unit_identifier] is not defined %}
        {% set sortedUnitRanges = sortedUnitRanges|merge({ (unit_identifier): {'ranges' : [] } }) %}
    {% endif %}
    {% set currentRanges = sortedUnitRanges[unit_identifier]['ranges'] %}
    {% set currentRanges = currentRanges|merge([range]) %}
    {% set sortedUnitRanges = sortedUnitRanges|merge({ (unit_identifier): {'ranges' : currentRanges, 'unit' : unit_data } }) %}
{% endfor %}

<div class="product-quantity-price-ranges quantity-type-{{ rule.getCalculationBehaviour() }} d-block">
    <h3>{{ 'coreshop.ui.product_quantity_price_rules.ranges_available'|trans }}</h3>
    <table class="table table-striped">
        <thead class="">
        <tr class="">
            <th scope="col">{{ 'coreshop.ui.product_quantity_price_rules.quantity'|trans }}</th>
            {% set unit_label = sortedUnitRanges|length == 1 ? 'coreshop.ui.product_quantity_price_rules.price_per_item' : 'coreshop.ui.product_quantity_price_rules.unit_price' %}
            <th scope="col">{{ unit_label|trans }}</th>
        </tr>
        </thead>
        <tbody class="">

        {% for sortedUnitRange in sortedUnitRanges %}

            {% if sortedUnitRange.unit is not null %}
                <tr class="">
                    <td colspan="2"><strong>{{ sortedUnitRange.unit.name }}</strong></td>
                </tr>
            {% endif %}

            {% for range in sortedUnitRange.ranges %}
                <tr class="">
                    <td class="">{{ 'coreshop.ui.product_quantity_price_rules.starting_from'|trans }} <span class="">{{ range.getRangeFrom() }}</span>
                    </td>
                    <td class="">
                        <span class="range-price">{{ currency.convertAndFormat(coreshop_quantity_price_rule_range_price_calculated(range, product)) }}</span>
                        {% if range.isHighlighted() %}
                            <span class="badge badge-info">{{ 'coreshop.ui.product_quantity_price_rules.best_offer'|trans }}</span>
                        {% endif %}
                        {% if range.hasPseudoPrice() %}
                            <small>{{ 'coreshop.ui.product_quantity_price_rules.list_price'|trans }}
                                <del>{{ currency.convertAndFormatFromCustomCurrency(range.getCurrency.isoCode, range.getPseudoPrice()) }}</del>
                            </small>
                        {% elseif range.getPricingBehaviour() == 'percentage_decrease' %}
                            <small>{{ 'coreshop.ui.product_quantity_price_rules.you_save'|trans }}: {{ range.getPercentage() }}%</small>
                        {% elseif range.getPricingBehaviour() == 'amount_decrease' %}
                            <small>{{ 'coreshop.ui.product_quantity_price_rules.you_save'|trans }}
                                : {{ currency.convertAndFormatFromCustomCurrency(range.getCurrency.isoCode, range.getAmount()) }}</small>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

        {% endfor %}
        </tbody>
    </table>
</div>
