{% extends '@CoreShopFrontend/layout.html.twig' %}

{% block content %}
    {% include '@CoreShopFrontend/Checkout/_order-steps.html.twig' with {currentStep: 1, steps: checkoutSteps} only %}

    {% include '@CoreShopFrontend/Cart/_summary.html.twig' with {cart: cart, editAllowed: true} only %}

    <div class="row">
        <div class="col-xs-12 col-sm-2">
            <a href="{{ path('coreshop_shop_index') }}" class="btn btn-default w-100">
                {{ 'continue_shopping'|trans }}
            </a>
        </div>
        <div class="col-xs-12 col-sm-1 col-sm-push-9">
            <a href="{{ path('coreshop_shop_checkout', {'stepIdentifier': 'cart'}) }}" class="btn btn-main w-100">
                {{ 'checkout'|trans }}
            </a>
        </div>
    </div>
    <br/>
{% endblock %}