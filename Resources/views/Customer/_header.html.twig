{%  if customer and not customer.isGuest() %}
    <li>
        <a href="{{ path('coreshop_customer_profile') }}">
            <i class="fa fa-user hidden-lg hidden-md" title="{{ 'coreshop.ui.account'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'coreshop.ui.account'|trans }}
            </span>
        </a>
    </li>
    <li>
        <a href="{{ path('coreshop_cart_summary') }}">
            <i class="fa fa-shopping-cart hidden-lg hidden-md" title="{{ 'coreshop.ui.shopping_cart'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'coreshop.ui.shopping_cart'|trans }}
            </span>
        </a>
    </li>
    <li>
        <a href="{{ path('coreshop_checkout', {'stepIdentifier': 'cart'}) }}">
            <i class="fa fa-crosshairs hidden-lg hidden-md" title="{{ 'coreshop.ui.checkout'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'coreshop.ui.checkout'|trans }}
            </span>
        </a>
    </li>
    <li>
        <a href="{{ path('coreshop_logout') }}">
            <i class="fa fa-crosshairs hidden-lg hidden-md" title="{{ 'coreshop.ui.logout'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'coreshop.ui.logout'|trans }}
            </span>
        </a>
    </li>
{% else %}
    <li>
        <a href="{{ path('coreshop_register') }}">
            <i class="fa fa-unlock hidden-lg hidden-md" title="{{ 'coreshop.ui.register'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'coreshop.ui.register'|trans }}
            </span>
        </a>
    </li>
    <li>
        <a href="{{ path('coreshop_login') }}">
            <i class="fa fa-lock hidden-lg hidden-md" title="{{ 'coreshop.ui.login'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'coreshop.ui.login'|trans }}
            </span>
        </a>
    </li>
{% endif %}