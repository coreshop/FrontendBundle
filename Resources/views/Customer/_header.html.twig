{%  if customer and not customer.isGuest() %}
    <li>
        <a href="{{ path('coreshop_customer_profile') }}">
            <i class="fa fa-user hidden-lg hidden-md" title="{{ 'my_account'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'my_account'|trans }}
            </span>
        </a>
    </li>
    <li>
        <a href="{{ path('coreshop_cart_summary') }}">
            <i class="fa fa-shopping-cart hidden-lg hidden-md" title="{{ 'shopping_cart'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'shopping_cart'|trans }}
            </span>
        </a>
    </li>
    <li>
        <a href="{{ path('coreshop_checkout', {'stepIdentifier': 'cart'}) }}">
            <i class="fa fa-crosshairs hidden-lg hidden-md" title="{{ 'checkout'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'checkout'|trans }}
            </span>
        </a>
    </li>
    <li>
        <a href="{{ path('coreshop_logout') }}">
            <i class="fa fa-crosshairs hidden-lg hidden-md" title="{{ 'logout'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'logout'|trans }}
            </span>
        </a>
    </li>
{% else %}
    <li>
        <a href="{{ path('coreshop_register') }}">
            <i class="fa fa-unlock hidden-lg hidden-md" title="{{ 'register'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'register'|trans }}
            </span>
        </a>
    </li>
    <li>
        <a href="{{ path('coreshop_login') }}">
            <i class="fa fa-lock hidden-lg hidden-md" title="{{ 'login'|trans }}"></i>
            <span class="hidden-sm hidden-xs">
                {{ 'login'|trans }}
            </span>
        </a>
    </li>
{% endif %}