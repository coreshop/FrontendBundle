{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% import "@CoreShopFrontend/Common/Macro/messages.html.twig" as messages %}

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-smart">
            <div class="panel-heading">
                <h3 class="panel-title">{{ 'login'|trans }}</h3>
            </div>
            <div class="panel-body">
                {% if last_error %}
                    {{ messages.error(last_error.messageKey|trans(last_error.messageData, 'security')) }}
                {% endif %}
                <p>
                    {{ 'login_with_existing_account'|trans }}
                </p>

                {{ form_start(form, {'action': path('coreshop_login_check'), 'attr': {'novalidate': 'novalidate'}}) }}

                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}
                    {{ form_row(form._remember_me) }}

                    {% if target is defined  %}
                        <input type="hidden" name="_target_path" value="{{ target }}" />
                    {% endif %}

                    <button type="submit" class="ui blue submit button">{{ 'login'|trans }}</button>

                    <a class="pull-right" href="{{ path('coreshop_customer_password_reset_request') }}">{{ 'reset_password'|trans }}</a>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-smart">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Create new account
                </h3>
            </div>
            <div class="panel-body">
                <p>
                    {{ 'registration_text'|trans }}
                </p>
                <a href="{{ path('coreshop_register') }}" class="btn btn-black">{{ 'register'|trans }}</a>
            </div>
        </div>
    </div>
</div>